{
    "name": "paritybit/deployment-notifier",
    "type": "library",
	"description": "A simple tool to notify you of deployments",
	"keywords": ["deployment", "notifications"],
	"require": {
		"php": ">=5.5.0"
	},
    "require-dev": {
        "fzaninotto/faker": "1.4",
		"phpunit/phpunit": "4.0.*",
        "satooshi/php-coveralls": "1.0.1",
        "symfony/console": "3.0.*",
        "symfony/process": "3.0.*"
	},
	"authors": [
		{
			"name": "Michael Peacock",
			"email": "mkpeacock@gmail.com",
			"homepage": "http://www.twitter.com/michaelpeacock",
			"role": "developer"
		}
	],
	"license": "MIT",
    "autoload": {
        "psr-4": { "ParityBit\\DeploymentNotifier\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "ParityBit\\DeploymentNotifier\\": "tests/" }
    },
    "bin": ["bin/deployment-notifier"]
}
